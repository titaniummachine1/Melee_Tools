{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start MCP Server (bg)",
            "type": "shell",
            "command": "python -m src.mcp_server.server",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Test get_types (sample)",
            "type": "shell",
            "command": "powershell -ExecutionPolicy Bypass -File ${workspaceFolder}/scripts/test-get-types.ps1",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "ðŸ”„ Refresh Documentation Types",
