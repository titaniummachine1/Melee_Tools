{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run BundleAndDeploy.bat",
            "type": "shell",
            "command": "${workspaceFolder}/automations/BundleAndDeploy.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Check Type Definitions",
            "type": "shell",
            "command": "node ${workspaceFolder}/automations/update-types.js",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "ðŸ”„ Refresh Documentation Types",
            "type": "shell",
            "command": "npm install; node refresh-docs.js",
            "options": {
                "cwd": "${workspaceFolder}/automations"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
