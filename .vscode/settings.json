{
    "editor.formatOnSave": true,
    "[lua]": {
      "editor.defaultFormatter": "JohnnyMorganz.stylua", 
      "editor.formatOnSave": true
    },
    "stylua.searchParentDirectories": true,
    "stylua.targetReleaseVersion": "latest",
    "Lua.runtime.version": "Lua 5.4",
    "Lua.workspace.library": [
        "${workspace}/types"
    ],
    "Lua.diagnostics.globals": [
        "client",
        "draw",
        "engine",
        "entities",
        "globals",
        "gui",
        "input",
        "render",
        "warp",
        "filesystem",
        "callbacks",
        "Lua__fileName",
        "printc",
        "KEY_NONE",
        "KEY_LSHIFT",
        "KEY_RSHIFT"
    ],
    "Lua.diagnostics.disable": [
        "unused-local",
        "unused-function"
    ],
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.(lua|py)$",
                "isAsync": true,
                "cmd": "powershell -ExecutionPolicy Bypass -File ${workspaceFolder}/scripts/restart-mcp.ps1",
                "message": "Restarting MCP server on save...",
                "autoShowOutputPanel": "error"
            }
        ]
    }
}